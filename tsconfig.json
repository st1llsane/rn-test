{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./app/*"],
			"@shared/*": ["./app/shared/*"],
			"@screens/*": ["./app/screens/*"],
			"@components/*": ["./app/components/*"],
			"@ui/*": ["./app/components/ui/*"],
			"@assets/*": ["./assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
